{
  "name": "cafed",
  "version": "1.0.0",
  "description": "Cafedelia backend - Watch-Transform-Execute pipeline for Claude Code integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "health": "node -e \"require('http').get('http://localhost:' + (process.env.CAFED_PORT || 8001) + '/health', (res) => { console.log('Health check:', res.statusCode === 200 ? 'OK' : 'FAIL'); process.exit(res.statusCode === 200 ? 0 : 1) })\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
