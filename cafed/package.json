{
  "name": "cafed",
  "version": "1.0.0",
  "description": "Cafedelia backend - Watch-Transform-Execute pipeline for Claude Code integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "node -e \"require('http').get('http://localhost:' + (process.env.CAFED_PORT || 8001) + '/health', (res) => { console.log('Health check:', res.statusCode === 200 ? 'OK' : 'FAIL'); process.exit(res.statusCode === 200 ? 0 : 1) })\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "chokidar": "^3.5.3",
    "sqlite3": "^5.1.7",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/sqlite3": "^3.1.11",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
